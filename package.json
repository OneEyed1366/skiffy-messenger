{
  "name": "@retrievly/monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:mobile": "pnpm --filter app start",
    "dev:desktop": "pnpm --filter app tauri dev",
    "build:mobile": "pnpm --filter app expo export",
    "build:desktop": "pnpm --filter app tauri build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "patch-package": "^8.0.0",
    "typescript": "~5.9.2",
    "prettier": "^3.6.2",
    "eslint": "^9.25.0"
  }
}
